<div>
  <h2>Daily Sales Report</h2>
  <p>Date: {{date}}</p>
  
  <!-- Table for Sold Items -->
  <h3>Items Sold</h3>
  <table style="border-collapse: collapse; width: 100%; margin-bottom: 20px;">
    <thead>
      <tr>
        <th style="border: 1px solid black; padding: 8px;">SKU</th>
        <th style="border: 1px solid black; padding: 8px;">Quantity Sold</th>
      </tr>
    </thead>
    <tbody>
      {{#if soldItems.length}}
        {{#each soldItems}}
        <tr>
          <td style="border: 1px solid black; padding: 8px;">{{sku}}</td>
          <td style="border: 1px solid black; padding: 8px;">{{qt}}</td>
        </tr>
        {{/each}}
      {{else}}
      <tr>
        <td colspan="2" style="border: 1px solid black; padding: 8px;">No Items sold</td>
      </tr>
      {{/if}}
    </tbody>
  </table>

  <!-- Summary Table -->
  <h3>Summary</h3>
  <table style="border-collapse: collapse; width: 100%;">
    <tbody>
      <tr>
        <th style="border: 1px solid black; padding: 8px;">Total Sales</th>
        <th style="border: 1px solid black; padding: 8px;">{{totalSales}}</th>
      </tr>
    </tbody>
  </table>
</div>
